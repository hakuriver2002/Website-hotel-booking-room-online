<link rel="stylesheet" href="css/history.css" type="text/css">
<div class="container-xl">

    <div class="table-responsive shadow-lg rounded">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-8">
                        <h2>Lịch sử đặt phòng: {{username}}</h2>
                    </div>
                    <div class="col-sm-4">
                        <div class="search-box">
                            <i class="material-icons">&#xE8B6;</i>
                            <input type="text" class="form-control" id="searchInput" onkeyup="searchBox()"
                                placeholder="Search&hellip;">
                        </div>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-hover table-bordered" id="myTable">
                <thead>
                    <tr>
                        <th onclick="sortBy(0)" style="width:72px">No.<i class="fa fa-sort"></i></th>
                        <th onclick="sortBy(1)">Mã hóa đơn<i class="fa fa-sort"></i></th>
                        <th onclick="sortBy(2)">Tên phòng<i class="fa fa-sort"></i></th>
                        <th onclick="sortBy(3)">Ngày đặt<i class="fa fa-sort"></i></th>
                        <th onclick="sortBy(4)">Giá tiền<i class="fa fa-sort"></i></th>
                        <th>Xem chi tiết</th>
                    </tr>
                </thead>
                <tbody>
                    {{!-- {{#each customers}} --}}
                    {{#each bookrooms}}
                    <tr>
                        <td>{{@index}}</td>
                        <td>{{book_id}}</td>
                        <td>P4tern Room</td>
                        <td>{{created_at}}</td>
                        <td>${{price}}</td>
                        <td>
                            <a href="/history/{{book_id}}" onclick="historydetail({{book_id}})" class="view text-center" title="View"
                                data-toggle="tooltip"><i class="material-icons">&#xE417;</i></a>
                        </td>
                    </tr>
                    {{/each}}
                    {{!-- {{/each}} --}}
                </tbody>
            </table>
        </div>
    </div>
</div>
<script>
    function historydetail(id) {
        const currentUrl = window.location.href; // Lấy URL hiện tại
        const newUrl = currentUrl + '/' + id; // Thêm id vào URL hiện tại
        window.location.href = newUrl; // Chuyển hướng đến URL mới
    }

    
</script>