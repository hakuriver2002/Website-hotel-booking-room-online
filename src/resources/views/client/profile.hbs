<head>
    <title>{{title}}</title>
    <link rel="stylesheet" href="/css/profile.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.6.3/css/font-awesome.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.2.0/mdb.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .col-lg-8 {
            position: relative;
        }

        .col-lg-8 #btnUpdate {
            position: absolute;
            bottom: 0;
            right: 0;
            margin-right: 10px;
        }
    </style>
</head>

<section style="background-color: #eee;">
    {{#if messageSuccess}}
    <div class="position-absolute top-0 end-0" style="z-index: 1000; margin: 100px 48px" id="success-alert">
        <div class="col-lg-10 mx-auto mb-3 w-auto">
            <div class="alert alert-success alert-dismissible fade show d-flex align-items-center" role="alert">
                <svg class="bi flex-shrink-0 me-2 mr-3" width="24" height="24" role="img" aria-label="Warning:">
                    <use xlink:href="#check-circle-fill" />
                </svg>
                <div> {{ messageSuccess }} </div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    </div>
    {{/if}}
    {{#if messageFailure}}
    <div class="position-absolute top-0 end-0" style="z-index: 1000; margin: 100px 48px" id="success-alert">
        <div class="col-lg-10 mx-auto mb-3 w-auto">
            <div class="alert alert-danger alert-dismissible fade show d-flex align-items-center" role="alert">
                <svg class="bi flex-shrink-0 me-2 mr-3" width="24" height="24" role="img" aria-label="Warning:">
                    <use xlink:href="#check-circle-fill" />
                </svg>
                <div> {{ messageFailure }} </div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    </div>
    {{/if}}

    <div class="container py-5" style="margin: 10px;">
        <div class="row">
            <div class="col">
                <nav aria-label="breadcrumb" class="bg-light rounded-3 p-3 mb-4">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">User Profile</li>
                    </ol>
                </nav>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-body text-center">
                        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp"
                            alt="avatar" class="rounded-circle img-fluid" style="width: 150px;">
                        <h5 class="my-3">{{username}}</h5>
                        <p class="text-muted mb-1" style="color: #386bc0;">{{#eq role 'client'}}
                            {{roleLabel 'client'}}
                            {{else}}
                            {{roleLabel 'admin'}}
                            {{/eq}}</p>
                        <p class="text-muted mb-4"> {{address}}</p>
                        <div class="d-flex justify-content-center mb-2">
                            <a href="/history"> <button type="button" class="btn btn-primary homeBtn">History
                                    Booking</button>
                            </a>
                            <button type="button" class="btn btn-outline-primary ms-1">Message</button>
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-lg-8">

                <div class="card mb-4">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Full Name</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">{{fullname}}</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Email</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">{{email}}</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Phone</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">{{phone}}</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Birthday</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">{{birthday}}</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Gender</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">{{gender}}</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Address</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">{{address}}</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Password</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">*******</p>
                            </div>
                        </div>
                    </div>

                </div>
                <button type="button" class="btn btn-primary" id="btnUpdate" data-bs-toggle="modal"
                    data-bs-target="#exampleModal"><i class="fa fa-edit"></i>
                    Update</button>
                <button type="button" class="btn btn-warning" id="btnChangePass" data-bs-toggle="modal"
                    data-bs-target="#editPass"><i class="fa fa-edit"></i>
                    Change Password</button>

            </div>
        </div>
    </div>
    <div class="modal fade" id="editPass" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel" style="color: #ffc107;">Chỉnh sửa password user:
                        {{username}}</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form action="/profile/updatePassword" method="post" id="updatePass-form">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="oldpass" class="form-label">Nhập password cũ</label>
                            <input type="password" class="form-control" id="oldpass" name="oldpass">
                        </div>
                        <div class="mb-3">
                            <label for="newpass" class="form-label">New password</label>
                            <input type="password" class="form-control" id="newpass" name="newpass">
                        </div>
                        <div class="mb-3">
                            <label for="repnewpass" class="form-label">Repeat new password</label>
                            <input type="password" class="form-control" id="repnewpass" name="repnewpass">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-warning">Save Password</button>
                    </div>
                </form>
            </div>
        </div>

    </div>
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Chỉnh sửa thông tin {{username}}</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form action="/profile/update" method="post" id="updateForm">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="fullname" class="form-label">Full name</label>
                            <input type="text" class="form-control" id="fullname" name="fullname" value="{{fullname}}">
                        </div>
                        <div class="mb-3">
                            <label for="phone" class="form-label">Phone</label>
                            <input type="tel" class="form-control" id="phone" name="phone" value="{{phone}}">
                        </div>
                        <div class="mb-3">
                            <label for="birthday" class="form-label">Birthday</label>
                            <input type="date" class="form-control" id="birthday" name="birthday" value="{{birthday}}">
                        </div>
                        <label for="gender" class="form-label">Gender</label>
                        <select class="form-select" id="gender" name="gender" aria-label="Default select example">
                            {{#if (equal gender "Male")}}
                            <option value="Male" selected>Male</option>
                            <option value="Female">Female</option>
                            {{else}}
                            <option value="Male">Male</option>
                            <option value="Female" selected>Female</option>
                            {{/if}}
                        </select>
                        <div class="mb-3">
                            <label for="Address" class="form-label">Address</label>
                            <textarea class="form-control" id="address" name="address" rows="3">{{address}}</textarea>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Verify Password</label>
                            <input type="password" class="form-control" id="password" name="password">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
</body>
<script>


    const updateForm = document.querySelector('#updateForm');
    updateForm.addEventListener('submit', () => {
        if (!updateForm.password.value) {
            alert('Please enter your password to verify');
            event.preventDefault();
        }
    });

    const updatePassForm = document.querySelector('#updatePass-form');
    updatePassForm.addEventListener('submit', () => {
        if (!updatePassForm.oldpass.value || !updatePassForm.newpass.value || !updatePassForm.repnewpass.value) {
            alert('Please enter all fields');
            event.preventDefault();
        }
        if (updatePassForm.newpass.value !== updatePassForm.repnewpass.value) {
            alert('New password and repeat new password must be the same');
            event.preventDefault();
        }
    });

</script>